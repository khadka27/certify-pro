server {
    listen 80;
    # Replace with your actual domain
    server_name certify.fakereviewgenerator.com;

    location / {
        # IMPORTANT: Do NOT use 'try_files' for a Node.js/Next.js standalone server.
        # 'try_files' looks for physical files on the disk, which don't exist for dynamic routes.
        # Instead, we proxy EVERYTHING to the running Node.js application.
        
        proxy_pass http://localhost:3044;
        
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_cache_bypass $http_upgrade;

        # Forward real IP and protocol info
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }
}
